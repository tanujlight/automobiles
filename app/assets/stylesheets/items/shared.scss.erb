#item-details {
	.cover-image {
		width: 100%;

		img {
			width: 100%;
		}
	}

	.wrapper {
		max-width: 1220px;
		width: 96%;
		margin: 0 auto;
		padding: 0 2%;

		.content {
			.heading {
				width: 1070px;
				margin: 0 auto;
				height: 66px;
				background: asset-url('headding_bg.png') no-repeat;
				background-position: center center;
				background-size: cover;

				h3 {
					margin: 0;
					margin-left: 35px;
					padding-top: 2px;
					font-size: 2em;
					color: #ffffff;
					font-family: 'font_semibold', helvetica, sans-serif;
					font-weight: normal;
					text-transform: uppercase
				}
			}

			.information {
				.information-level-1 {
					margin: 50px 0;

					.overview {
						display: inline-block;
						vertical-align: top;

						.overview-image {
							display: inline-block;
							vertical-align: top;

							h4 {
								background: #002D62;
								font-family: 'font_bold', helvetica, sans-serif;
								font-size: 1.1em;
								color: #ffffff;
								line-height: 30px;
								width: 100px;
								text-align: center;
								padding: 3px 10px;
								border-top-right-radius: 7px;
								border-bottom-left-radius: 7px;
								font-weight: normal;
								margin-left: 60px;
								text-transform: uppercase;
							}

							figure {
								margin: 40px 0 0 30px;
								width: 462px;

								img {
									width: 100%;
								}
							}
						}

						.overview-text {
							display: inline-block;
							vertical-align: top;
							margin-top: 100px;
							margin-left: 20px;

							p {
								font-family: 'font_light', helvetica, sans-serif;
								font-size: 0.9em;
								color: #2a2a2a;
								width: 300px;
								text-align: justify;
							}
						}
					}

					.model {
						display: inline-block;
						vertical-align: top;
						margin-top: 100px;
						margin-left: 50px;
						width: 330px;

						h4 {
							background: #002D62;
							font-family: 'font_bold', helvetica, sans-serif;
							font-size: 1.1em;
							color: #ffffff;
							line-height: 30px;
							width: 120px;
							text-align: center;
							padding: 3px 10px;
							border-top-right-radius: 7px;
							border-bottom-left-radius: 7px;
							font-weight: normal;
							margin-left: 60px;
						}

						h3 {
							font-size: 1.5em;
							font-family: 'font_bold', helvetica, sans-serif;
							font-weight: normal;
							color: #333333;
							margin: 0;
							text-align: center;
							text-transform: uppercase;
						}

						figure {
							margin: 0 auto;
							width: 100%;

							img {
								width: 100%;
							}
						}

						.slider {
							.slider-area {
								ul.slider-items {
									min-height: 230px;
								}
							}
						}
					}
				}

				.information-level-2 {
					margin-bottom: 50px;

					.technology {

						.slider {
							h4 {
								background: #002D62;
								font-family: 'font_bold', helvetica, sans-serif;
								font-size: 1.1em;
								color: #ffffff;
								line-height: 30px;
								width: 120px;
								text-align: center;
								padding: 3px 10px;
								border-top-right-radius: 7px;
								border-bottom-left-radius: 7px;
								font-weight: normal;
								margin: 0 0 40px 60px;
								text-transform: uppercase;
							}

							.slider-area {
								ul.slider-items {
									min-height: 330px;
									list-style: none;

									li {
										text-align: center;
										.content {
											display: inline-block;
											vertical-align: middle;
											width: 500px;
											text-align: left;

											h3 {
												font-weight: normal;
												font-family: 'font_semibold_italic', helvetica, sans-serif;
												font-size: 2em;
												color: #333333;
												margin: 0 0 10px;
											}

											p {
												font-family: 'font_light',helvetica, sans-serif;
												font-size: 0.9em;
												color: #2a2a2a;
												margin: 0;

												&.detail {
													margin-top: 30px;
												}
											}
										}

										figure {
											display: inline-block;
											margin: 0;
											vertical-align: middle;
											width: 422px;

											img {
												width: 100%;
											}
										}
									}
								}

								.slider-arrows {
									a {
										width: 40px;

										img {
											width: 100%;
										}
									}

									.left-arrow {
										left: 30px;
									}

									.right-arrow {
										right: 40px;
									}
								}
							}
						}
					}
				}
			}
		}
	}
}