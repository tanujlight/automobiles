#contact-page {
	background: #fafafa;
	margin-top: 60px;
	padding: 95px 0;

	.wrapper {
		max-width: 1140px;
		width: 96%;
		padding: 0 2%;
		margin: 0 auto;
		text-align: center;

		h2 {
			margin: 0;
			font-weight: normal;
			font-size: 2.5em;
			font-family: 'font_semibold_italic', helvetica, sans-serif;
			color: #2d2d2d;

			@media only screen and(max-width: 420px) {
				font-size: 2.2em;
			}
		}

		.contact-option {
			list-style: none;
			margin: 0;
			padding: 0;
			margin-top: 35px;

			li {
				display: inline-block;
				width: 169px;
				vertical-align: top;
				margin: 27px;

				figure {
					width: 116px;
					margin: 0 auto;

					img {
						width: 100%;
					}
				}

				h4 {
					font-weight: normal;
					font-size: 1.25em;
					font-family: 'font_light', helvetica, sans-serif;
					color: #ff5722;
					margin: 0;
					margin-top: 11px;
				}

				a {
					text-decoration: none;
					color: #2d2d2d;
					font-family: 'font_light',helvetica ,sans-serif;
					font-size: 0.88em;

					&:hover {
						font-size: 0.9em;
					}
				}

				p {
					color: #2d2d2d;
					font-family: 'font_light',helvetica ,sans-serif;
					font-size: 0.88em;
					margin: 0;
				}
			}
		}
 	}
}